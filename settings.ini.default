[Don't Blind Me!]
black_flash = boolean(default=yes)
# This option does not make the screen completely black when smoked but
# dims the screen so that you are still able to see the radar and HUD.
black_smoke = boolean(default=no)
# f.lux Compatibility Mode
# Only works when the app is started after f.lux!
# If it set to off, f.lux must be disabled while the app is running.
flux_compatibility_mode = boolean(default=on)
# This option disabled f.lux. Only works in compatibility mode.
flux_disable = boolean(default=yes)

[Video Settings]
# Brightness (min. 1.6; max. 2.6)
mat_monitorgamma = float(1.6, 2.6, default=2.0)
# Color Mode (Computer Monitor: 0; Television: 1)
mat_monitorgamma_tv_enabled = option(0, 1, default=0)

[Game State Integration]
host = ip_addr(default=127.0.0.1)
port = integer(49152, 65535, default=54237)
